{
	"name": "dimewise",
	"version": "0.0.1",
	"description": "DimeWise is a personalized financial planning app that emphasizes meticulous, category-centric budgeting based on real-life experiences.",
	"repository": {
		"type": "git",
		"url": "https://github.com/teoyi/dimewise"
	},
	"type": "module",
	"scripts": {
		"build": "vite build",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"db:migrate": "npx prisma migrate dev",
		"db:reset": "npx prisma migrate reset",
		"db:status": "npx supabase status",
		"dev": "vite dev",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"preview": "vite preview",
		"setup:hooks": "cp scripts/* .git/hooks/ && chmod +x .git/hooks/pre-commit .git/hooks/pre-push",
		"test": "npm run test:integration && npm run test:unit",
		"test:integration": "playwright test",
		"test:unit": "vitest"
	},
	"devDependencies": {
		"@fontsource/fira-mono": "^4.5.10",
		"@iconify/svelte": "^3.1.6",
		"@neoconfetti/svelte": "^1.0.0",
		"@playwright/test": "^1.28.1",
		"@stylistic/eslint-plugin-js": "^1.5.3",
		"@stylistic/eslint-plugin-ts": "^1.5.3",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.6",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@tailwindcss/typography": "^0.5.10",
		"@types/eslint": "8.56.0",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"autoprefixer": "^10.4.16",
		"cookie": "^0.6.0",
		"daisyui": "^4.5.0",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"postcss": "^8.4.32",
		"prettier": "^3.2.4",
		"prettier-plugin-svelte": "^3.1.2",
		"prettier-plugin-tailwindcss": "^0.5.11",
		"prisma": "^5.7.1",
		"supabase": "^1.127.3",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"sveltekit-superforms": "^1.13.1",
		"tailwindcss": "^3.4.0",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^5.0.3",
		"vitest": "^1.0.0",
		"zod": "^3.22.4"
	},
	"dependencies": {
		"@prisma/client": "^5.7.1",
		"@supabase/ssr": "^0.0.10",
		"@supabase/supabase-js": "^2.39.1",
		"svelte-i18n": "^4.0.0"
	}
}
