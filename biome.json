{
	"$schema": "https://biomejs.dev/schemas/1.6.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"useKeyWithClickEvents": "off",
				"useKeyWithMouseEvents": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"lineWidth": 120,
		"indentWidth": 2
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"lineWidth": 120,
			"semicolons": "always",
			"arrowParentheses": "always",
			"trailingComma": "all"
		}
	}
}
