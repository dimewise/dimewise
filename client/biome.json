{
	"$schema": "https://biomejs.dev/schemas/1.8.0/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"ignore": ["./src/services/api/**"],
		"rules": {
			"recommended": true,
			"style": {
				"noDefaultExport": "error",
				"useFilenamingConvention": {
					"level": "error",
					"options": {
						"strictCase": true,
						"requireAscii": true,
						"filenameCases": ["camelCase", "PascalCase"]
					}
				},
				"useNamingConvention": {
					"level": "error",
					"options": {
						"strictCase": true,
						"requireAscii": true
					}
				},
				"useShorthandArrayType": "warn",
				"useShorthandAssign": "warn",
				"useSingleCaseStatement": "warn"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"lineWidth": 120,
		"indentWidth": 2,
		"attributePosition": "multiline",
		"ignore": ["./src/services/api/**"]
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"quoteStyle": "double",
			"lineWidth": 120,
			"trailingCommas": "all",
			"semicolons": "always",
			"arrowParentheses": "always"
		}
	},
	"json": {
		"formatter": {
			"enabled": true
		}
	},
	"overrides": [
		{
			"include": [
				"./supabase/*",
				"./src/types/supabase.ts",
				"./postcss.config.js",
				"./tailwind.config.js",
				"./src/lib/locale/i18n.ts"
			],
			"linter": {
				"rules": {
					"style": {
						"noDefaultExport": "off",
						"useNamingConvention": "off"
					}
				}
			}
		},
		{
			"include": ["./src/types/vite-env.d.ts"],
			"linter": {
				"rules": {
					"style": {
						"useFilenamingConvention": "off"
					}
				}
			}
		}
	]
}
